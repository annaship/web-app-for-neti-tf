<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
    targetNamespace="http://globalnames.org/nameparser" 
    xmlns:np="http://globalnames.org/nameparser" elementFormDefault="qualified">
    <xs:element name="names">
        <xs:complexType>
            <xs:choice maxOccurs="unbounded">
                <xs:element name="scientificName" type="np:scientificNameType"/>
                <xs:element name="hybridFormula">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="scientificName" type="np:scientificNameType" minOccurs="1" maxOccurs="unbounded"/>
                        </xs:sequence>
                        <xs:attribute name="verbatim" type="xs:string" use="required"/>
                        <xs:attribute name="normalised" type="xs:string" />
                        <xs:attribute name="unparsable" type="xs:boolean" use="optional" default="false"/>
                    </xs:complexType>
                </xs:element>
            </xs:choice>
        </xs:complexType>
    </xs:element>
    
    <xs:complexType name="nameBaseType" abstract="true">
        <xs:attribute name="verbatim" type="xs:string" use="required"/>
        <xs:attribute name="normalised" type="xs:string" />
        <xs:attribute name="canonical" type="xs:string" />
        <xs:attribute name="unparsable" type="xs:boolean" use="optional" default="false"/>
    </xs:complexType>
    
    <xs:complexType name="scientificNameType">
        <xs:complexContent>
            <xs:extension base="np:nameBaseType">
                <xs:choice>
                    <xs:element name="uninomial" type="np:uninomialType" minOccurs="0" maxOccurs="1"/>
                    <xs:sequence>
                        <xs:element name="genus" type="np:uninomialType" minOccurs="0" maxOccurs="1"/>
                        <xs:element name="subgenus" type="np:subGenusType" minOccurs="0" maxOccurs="1"/>
                        <xs:element name="species" type="np:speciesType" minOccurs="0" maxOccurs="1"/>
                        <xs:element name="infraspecies" type="np:infraspeciesType" minOccurs="0" maxOccurs="unbounded"/>
                    </xs:sequence>
                </xs:choice>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="hybridFormulaType">
        <xs:complexContent>
            <xs:extension base="np:nameBaseType">
                <xs:sequence>
                    <xs:element name="scientificName" type="np:scientificNameType" minOccurs="1" maxOccurs="unbounded"/>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType name="uninomialType" mixed="true">
        <xs:attribute name="hybrid" type="xs:boolean" default="false"/>
        <xs:attribute name="authorship" type="xs:string"/>
    </xs:complexType>
    <xs:complexType name="subGenusType" mixed="true">
        <xs:attribute name="authorship" type="xs:string"/>
    </xs:complexType>
    <xs:complexType name="speciesType">
        <xs:sequence>
            <xs:element name="combinationAuthorteam" type="np:authorTeamType" minOccurs="0"/>
            <xs:element name="basionymAuthorteam" type="np:authorTeamType" minOccurs="0"/>
            <xs:element name="exAuthorteam" type="np:authorTeamType" minOccurs="0"/>
            <xs:element name="exBasionymAuthorteam" type="np:authorTeamType" minOccurs="0"/>
        </xs:sequence>
        <xs:attribute name="hybrid" type="xs:boolean" default="false"/>
        <xs:attribute name="epitheton" type="xs:string"/>
        <xs:attribute name="authorship" type="xs:string"/>
    </xs:complexType>
    <xs:complexType name="infraspeciesType">
        <xs:complexContent>
            <xs:extension base="np:speciesType">
                <xs:attribute name="rank" type="xs:string"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    <xs:complexType name="authorTeamType">
        <xs:sequence>
            <xs:element name="author" maxOccurs="unbounded" type="xs:string"/>            
        </xs:sequence>
        <xs:attribute name="authorteam" type="xs:string"/>
    </xs:complexType>
    
</xs:schema>